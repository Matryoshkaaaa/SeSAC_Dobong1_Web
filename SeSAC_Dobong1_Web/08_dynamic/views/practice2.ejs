<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <form name="register">
      <fieldset>
        <legend>회원가입</legend>
        <label for="id">아이디</label>
        <input type="text" name="id" id="id" />
        <br />
        <label for="password">비밀번호</label>
        <input type="password" name="password" id="password" />
        <br />
        <button type="button" onclick="axiosPost()">로그인</button>
        <br />
        <div class="result"></div>
      </fieldset>
    </form>
  </body>
  <script>
    const resultBox = document.querySelector(".result");
    async function axiosPost() {
      const form = document.forms["register"];
      const data = {
        id: form.id.value,
        password: form.password.value,
      };

      if (!form.id.checkvalidity() || !form.password.checkvalidity()) {
        resultBox.textContent = "아이디와 비밀번호는 필수 값입니다.";
        return;
      }

      try {
        const response = await axios({
          method: "post",
          url: "/axiosLogin",
          data: data, // post 는 data에 data
        });
        console.log(response.data);
        resultBox.style.color = "green";
        resultBox.innerText = "로그인 성공";
        if (response.data == "loginErr") {
          resultBox.style.color = "red";
          resultBox.innerText = "로그인 실패";
        }
      } catch (err) {
        console.log(err);
      }
    }
  </script>
</html>
